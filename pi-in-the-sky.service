[Unit]
Description=Pi in the Sky

[Service]
ExecStart=/var/www/pi-in-the-sky/index.js
Restart=always
User=nobody
# Note Debian/Ubuntu uses 'nogroup', RHEL/Fedora uses 'nobody'
Group=nogroup
Environment=PATH=/usr/bin:/usr/local/bin
Environment=NODE_ENV=production
WorkingDirectory=/var/www/pi-in-the-sky

[Install]
WantedBy=multi-user.target
